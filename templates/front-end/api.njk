import request from '@/plugin/axios'
export function get<$ model.Name $>(id) {
    return request({
        url: '/<$ model.name $>/' + id,
        method: 'get',
        loading: {
            type: 'nprogress',
            interval: 500
        }
    })
}
export function get<$ model.Name $>PagedList(query) {
    return request({
        url: '/<$ model.name $>/paged',
        method: 'get',
        params: query
    })
}
export function save<$ model.Name $>(data) {
    return request({
        url: '/<$ model.name $>/save',
        method: 'post',
        data: data,
        success: {
            type: 'message',
            options: {
                message: '保存成功',
                type: 'success'
            }
        }
    })
}
export function del<$ model.Name $>(id) {
    return request({
        url: '/<$ model.name $>/del',
        method: 'delete',
        params: { id: id },
        success: {
            type: 'message',
            options: {
                message: '删除成功',
                type: 'success'
            }
        }
    })
}
export function del<$ model.Name $>s(ids) {
    return request({
        url: '/<$ model.name $>/batchdel',
        method: 'delete',
        params: ids,
        success: {
            type: 'message',
            options: {
                message: '删除成功',
                type: 'success'
            }
        }
    })
}